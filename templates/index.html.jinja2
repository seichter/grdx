<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <!-- FontAwesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">

  <style>

  </style>

  <script>

  window.onload = function() {
    $(document).ready(function() {
      $(".showModal").click(function(e) {
        e.preventDefault();
        
        var url = $(this).attr("data-href");
        console.log(url)
        $("#studentModal iframe").attr("src", url);
        $("#studentModal").modal("show");
      });
    });
  }
  </script>

  <title>Grading</title>
  </head>
  
  <body>
    <div class="container">
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/">
              <i class="fas fa-pencil-alt"></i>&nbsp;GRDX
          </a>
        </nav>

    <table class="table table-striped">
    <caption>List of students</caption>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Year</th>
          <th scope="col">Course</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>          
        {% for s in students %}
        <tr>
        <td>{{ s.id }}</td>
        <td>{{ s.name }}</td>
        <td>{{ s.year }}</td>
        <td>{{ s.course }}</td>
        <td>
        <center>
          
          <form method="POST" action="/student/delete">
            <input type="hidden" value="{{s.id}}" name="student_id">
            <input type="submit" class="fa btn btn-success" value="&#xf506; Delete"/>
          </form>
        </center>
        </td>
        <tr>
        {% endfor %}
      </tbody>
      </table>

      {% include 'student_add.html.jinja2' %}


      {% include 'bottom.html.jinja2' %}

   </div>

   
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>


  </body>
</html>
