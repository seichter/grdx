<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
     <!-- Bootstrap Table CSS -->
     <link rel="stylesheet" href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css">

     <!-- FontAwesome -->
     <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">


<style>

</style>

<script>

window.onload = function() {
  $(document).ready(function() {
    $(".showModal").click(function(e) {
      e.preventDefault();
      
      var url = $(this).attr("data-href");
      console.log(url)
      $("#studentModal iframe").attr("src", url);
      $("#studentModal").modal("show");
    });
  });
}



</script>
    <title>Grading</title>
  </head>
  <body>


    <div class="container">
        <nav class="navbar navbar-light bg-light">
            <a class="navbar-brand" href="/">
              <i class="fas fa-pencil-alt"></i>&nbsp;GRDX
          </a>
        </nav>

   {% include 'toolbar.html.jinja2' %}


   {% include 'modal_add_student.html.jinja2' %}

    <table class="table table-striped">
    <caption>List of students</caption>
      <thead>
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Name</th>
          <th scope="col">Year</th>
          <th scope="col">Course</th>
          <th scope="col">&nbsp;</th>
        </tr>
      </thead>
      <tbody>          
        {% for s in students %}
        <tr row="{{loop.index}}">
        <td>{{ s.id }}</td>
        <td>{{ s.name }}</td>
        <td>{{ s.year }}</td>
        <td>{{ s.course }}</td>
        <td><center><a href="#" data-href="/edit/id/{{s.id}}" class="showModal"><i class="fas fa-edit"></i></a></center></td>
        <tr>
        {% endfor %}
      </tbody>

      </table>
      
      {% include 'bottom.html.jinja2' %}

   </div>

   
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  </body>
</html>
